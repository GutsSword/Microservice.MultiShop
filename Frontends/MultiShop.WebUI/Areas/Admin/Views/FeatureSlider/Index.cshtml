@model List<ResultFeatureSliderDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>Slider Listesi</h4>
                <p>
                    Kullanımla ilgili bilgilendirme yapmak için bu alanı kullanın.
                    <a href="/Admin/FeatureSlider/CreateFeatureSlider" class="btn btn-primary" style="float:right">Slider Ekle</a>
                </p>
                <br />
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>

                            <tr>
                                <th>#</th>
                                <th>Başlık</th>
                                <th>Açıklama</th>
                                <th>Image Url</th>
                                <th>Durum</th>
                                <th> </th>
                            </tr>

                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.FeatureSliderId</th>
                                    <td>@item.Title</td>
                                    <td>@item.Description</td>
                                    <td>@item.ImageUrl</td>

                                    @if (@item.Status == true)
                                    {
                                        <td>Aktif</td>
                                    }
                                    else
                                    {
                                        <td>Pasif</td>
                                    }

                                    <td><a href="/Admin/FeatureSlider/UpdateFeatureSlider/@item.FeatureSliderId" class="btn btn-primary btn-sm">Güncelle</a></td>
                                    <td><a href="/Admin/FeatureSlider/DeleteFeatureSlider/@item.FeatureSliderId" class="btn btn-danger btn-sm">Sil</a></td>

                                </tr>
                            }

                        </tbody>
                    </table>

                </div>
            </div>
        </div>

    </div>
</section>
