@using MultiShop.WebUI.Dtos.CatologDtos.CommentDto
@model List<ResultCommentDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Yorumlar</h4>
                <p>
                    Kullanımla ilgili bilgilendirme yapmak için bu alanı kullanın.
                </p>
                <br />
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Email</th>
                                <th>Kullanıcı Adı</th>
                                <th>Yorum İçeriği</th>
                                <th>Oluşturulma Tarihi</th>
                                <th>Aktiflik Durumu</th>
                                <th>İşlem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.UserCommentId</th>
                                    <td>@item.Email</td>
                                    <td>@item.NameSurname</td>
                                    <td>@item.CommentDetail</td>
                                    <td>@item.CreatedDate.ToString("MMM,dd,yyyy")</td>
                                    <td>@(item.Status ? "Aktif" : "Pasif")</td>
                                    <td>
                                        <a href="/Admin/Comment/UpdateComment/@item.UserCommentId">Güncelle</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
