
@model CreateRegisterDto

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Form-v4 by Colorlib</title>
	<!-- Mobile Specific Metas -->
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<!-- Font-->
	<link rel="stylesheet" type="text/css" href="~/colorlib-regform-30/css/opensans-font.css">
	<link rel="stylesheet" type="text/css" href="~/colorlib-regform-30/fonts/line-awesome/css/line-awesome.min.css">
	<!-- Jquery -->
	<link rel="stylesheet" href="https://jqueryvalidation.org/files/demo/site-demos.css">
	<!-- Main Style Css -->
	<link rel="stylesheet" href="~/colorlib-regform-30/css/style.css" />
</head>
<body class="form-v4">
	<div class="page-content">
		<div class="form-v4-content">

			<form class="form-detail" method="post">
				<h2>Üye Olma Ekranı</h2>
				<div class="form-group">
					<div class="form-row form-row-1">
						<label for="first_name">Ad</label>
						<input type="text" class="input-text" asp-for="Name">
					</div>
					<div class="form-row form-row-1">
						<label for="last_name">Soyad</label>
						<input type="text" class="input-text" asp-for="Surname">
					</div>
				</div>
				<div class="form-group">
					<div class="form-row form-row-1 ">
						<label for="your_email">Mail Adresi</label>
						<input type="email" class="input-text" asp-for="Email" required pattern="[^]+[^]+.[a-zA-Z]{2,6}">
					</div>
					<div class="form-row form-row-1">
						<label for="your_email"> Kullanıcı Adı</label>
						<input type="text" class="input-text" asp-for="UserName">
					</div>
				</div>
				<div class="form-row">				
				</div>
				<div class="form-group">
					<div class="form-row form-row-1 ">
						<label>Şifre</label>
						<input type="password" class="input-text" asp-for="Password" required>
					</div>
					<div class="form-row form-row-1">
						<label>Şifre Tekrar</label>
						<input type="password" class="input-text" asp-for="ConfirmPassword" required>
					</div>
				</div>

				<div class="form-row-last">
					<input type="submit" name="register" class="register" value="Kayıt Ol">
				</div>
				<p>Üye misin ? <a href="/Login/Index/">Hemen Giriş Yap.</a> </p>
			</form>

		</div>
	</div>
	<script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>
	<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
	<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>
	<script>
		// just for the demos, avoids form submit
		jQuery.validator.setDefaults({
			debug: true,
			success: function (label) {
				label.attr('id', 'valid');
			},
		});
		$("#myform").validate({
			rules: {
				password: "required",
				comfirm_password: {
					equalTo: "#password"
				}
			},
			messages: {
				first_name: {
					required: "Please enter a firstname"
				},
				last_name: {
					required: "Please enter a lastname"
				},
				your_email: {
					required: "Please provide an email"
				},
				password: {
					required: "Please enter a password"
				},
				comfirm_password: {
					required: "Please enter a password",
					equalTo: "Wrong Password"
				}
			}
		});
	</script>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>