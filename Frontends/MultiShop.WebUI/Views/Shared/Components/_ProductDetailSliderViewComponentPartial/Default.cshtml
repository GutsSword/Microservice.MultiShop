@using MultiShop.WebUI.Dtos.CatologDtos.ProductImagesDto
@model ResultProductImageDto

<style>
    .carousel-item {
        width: 450px;
        height: 480px;
        overflow: hidden;
        position: relative;
    }

        .carousel-item img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* or "contain" based on your preference */
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }
</style>

<div class="carousel-inner bg-light" style="width: 550px; height: 550px;">

        <div class="carousel-item active">
        <img class="w-100 h-100" src="@Model.Image1" alt="Image">
        </div>
        <div class="carousel-item">
        <img class="w-100 h-100" src="@Model.Image2" alt="Image">
        </div>
        <div class="carousel-item">
        <img class="w-100 h-100" src="@Model.Image3" alt="Image">
        </div>
 
</div>