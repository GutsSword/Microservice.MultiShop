@model List<ResultCommentDto>

@{
    int commentCount = Model.Count;
    int i;
}

<div class="tab-pane fade" id="tab-pane-3">
    <div class="row">
        <div class="col-md-6">
            <h4 class="mb-4">@commentCount Yorum </h4>
            @foreach (var item in Model)
            {
                <div class="media mb-4">
                    <img src="https://static-00.iconduck.com/assets.00/user-icon-2048x2048-ihoxz4vq.png" alt="Image" class="img-fluid mr-3 mt-1" style="width: 45px;">
                    <div class="media-body">
                        <h6>@item.NameSurname<small> - <i>@item.CreatedDate.ToString("MMMM,dd,yyyy")</i></small></h6>
                        <div class="text-primary mb-2">

                            @for (i = 0; i < item.Rating; i++)
                            {
                                <i class="fas fa-star"></i>
                            }
                            @for (i = 0; i < 5 - item.Rating; i++)
                            {
                                <i class="far fa-star"></i>
                            }
                        </div>
                        <p>@item.CommentDetail</p>
                    </div>
                </div>
            }
        </div>

        @await Component.InvokeAsync("_ProductDetailReviewAddViewComponentPartial", new { id = ViewBag.ProductId });
    
    </div>
</div>