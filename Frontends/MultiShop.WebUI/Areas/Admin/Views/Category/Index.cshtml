@model List<CategoryListDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>Kategori Ekle</h4>
                <p>Kullanımla ilgili bilgilendirme yapmak için bu alanı kullanın.
                    <a href="/Admin/Category/CreateCategory" class="btn btn-primary" style="float:right">Kategori Ekle</a>
                </p>
                <br />
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
 
                            <tr>
                                <th>#</th>
                                <th>Kategori Adı</th>
                                <th>Kategori Url</th>
                            </tr>

                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.CategoryId</th>
                                    <td>@item.CategoryName</td>
                                    <td>@item.ImageUrl</td>
                                    <td><a href="/Admin/Category/UpdateCategory/@item.CategoryId" class="btn btn-primary btn-sm">Kategoriyi Güncelle</a></td>
                                    <td><a href="/Admin/Category/DeleteCategory/@item.CategoryId" class="btn btn-danger btn-sm">Kategoriyi Sil</a></td>
                                                        
                                </tr>
                            }
                      
                        </tbody>
                    </table>
                   
                </div>
            </div>
        </div>

    </div>
</section>


