@using MultiShop.WebUI.Dtos.CatologDtos.CommentDto
@model CreateCommendDto

<div class="col-md-6">
    <h4 class="mb-4">Yorum yazın</h4>
    <small>Email adres bilginiz başkalarıyla paylaşılmamaktadır.*</small>
    <div class="d-flex my-3">
        <p class="mb-0 mr-2">Puanınız * :</p>
        <div class="text-primary">
            <i class="far fa-star"></i>
            <i class="far fa-star"></i>
            <i class="far fa-star"></i>
            <i class="far fa-star"></i>
            <i class="far fa-star"></i>
        </div>
    </div>
    <form method="post" asp-action="CreateComment" asp-controller="ProductList" asp-route-id="@Model.ProductId">
        <input type="hidden" asp-for="ProductId" />
        <input type="hidden" asp-for="ImageUrl" value="test" />
        <input type="hidden" asp-for="Rating" value="3" />
        <div class="form-group">
            <label for="name">Adınız *</label>
            <input type="text" class="form-control" id="name" name="NameSurname" asp-for="NameSurname" required>
        </div>
        <div class="form-group">
            <label for="email">Mail Adresi *</label>
            <input type="email" class="form-control" id="email" name="Email" asp-for="Email" required>
        </div>
        <div class="form-group">
            <label for="message">Yorumunuz *</label>
            <textarea id="message" name="CommentDetail" cols="30" rows="5" class="form-control" asp-for="CommentDetail" required></textarea>
        </div>
        <div class="form-group mb-0">
            <input type="submit" value="Yorumunuzu yazın" class="btn btn-primary px-3">
        </div>
    </form>
</div>