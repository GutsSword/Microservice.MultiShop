@model UpdateProductDto
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>Ürün Güncelle </h4>

                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">

                        <label>Ürün ID</label>
                        <br />
                        <input type="text" readonly class="form-control" asp-for="ProductId" />
                        <br />

                        <label>Ürün Adı</label>
                        <br />
                        <input type="text" class="form-control" asp-for="ProductName" />
                        <br />

                        <label>Ürün Kategorisi </label>
                        <br />
                        @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.CategoryNamesById, new { @class = "form-control" })
                        <br />

                        <label>Ürün Açıklaması</label>
                        <br />
                        <textarea type="text" class="form-control" asp-for="ProductDescription"></textarea>
                        <br />

                        <label>Ürün Fiyatı</label>
                        <br />
                        <input type="text" class="form-control" asp-for="ProductPrice" />
                        <br />

                        <label>Ürün Resim Url</label>
                        <br />
                        <input type="text" class="form-control" asp-for="ProductImageUrl" />
                        <br />

                        <button class="btn btn-primary">Güncelle ve Kaydet</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</section>