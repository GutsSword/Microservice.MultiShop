@using MultiShop.WebUI.Dtos.CatologDtos.ContactDto
@model CreateContactDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}

<!-- Breadcrumb Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="/Default/Index">Ana Sayfa</a>
                <span class="breadcrumb-item active">İletişim</span>
            </nav>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->

<!-- Contact Start -->

<div class="container-fluid">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Bİzİmle İletİşİme Geçİn</span></h2>
    <div class="row px-xl-5">
        <div class="col-lg-7 mb-5">
            <div class="contact-form bg-light p-30">
                <div id="success"></div>

                <form method="post">
                    <div class="control-group">
                        <input type="text" class="form-control"  placeholder="Adınız"
                               required="required" data-validation-required-message="Lütfen Adınızı Girin"  asp-for="NameSurname"/>
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="control-group">
                        <input type="email" class="form-control"  placeholder="Email"
                               required="required" data-validation-required-message=Lütfen Email Girin" asp-for="Email"/>
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="control-group">
                        <input type="text" class="form-control"  placeholder="Konu"
                               required="required" data-validation-required-message="Lütfen Konu Girin" asp-for="Subject" />
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="control-group">
                        <textarea class="form-control" rows="8"  placeholder="Mesaj"
                                  required="required"
                                  data-validation-required-message="Lütfen Mesajınızı Girin" asp-for="Message"></textarea>
                        <p class="help-block text-danger"></p>
                    </div>
                    <div>
                        <button class="btn btn-primary py-2 px-4" >
                            Mesaj Gönder
                        </button>
                    </div>
                </form>

            </div>
        </div>
        @await Component.InvokeAsync("_ContactCompenentPartial")
        
    </div>
</div>

<!-- Contact End -->

